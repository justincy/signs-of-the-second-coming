{
  "name": "signs-of-the-second-coming",
  "version": "1.0.0",
  "description": "Exploring the order of the signs of the Second Coming of Christ as mentioned in scripture.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justincy/signs-of-the-second-coming.git"
  },
  "bugs": {
    "url": "https://github.com/justincy/signs-of-the-second-coming/issues"
  },
  "homepage": "https://github.com/justincy/signs-of-the-second-coming#readme",
  "dependencies": {
    "yargs": "^12.0.2"
  },
  "scripts": {
    "build": "node scripts/build.js && npm run build:full-svg && npm run build:simplified-svg && npm run build:site",
    "build:full-svg": "dot -Tsvg -o public/full.svg graphs/signs.gv",
    "build:simplified-svg": "dot -Tsvg -o public/simplified.svg graphs/simplified.gv",
    "build:site": "cat public/header.html public/simplified.svg public/footer.html > public/index.html"
  }
}
